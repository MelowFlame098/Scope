# Database Configuration
# Using SQLite for development to avoid PostgreSQL dependency issues
DATABASE_URL=sqlite:///./finscope.db
# For production with PostgreSQL:
# DATABASE_URL=postgresql://postgres:KevinDurant1!@localhost:5432/finscope_db

# JWT Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (add your actual API keys here)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
COINGECKO_API_KEY=your-coingecko-api-key
NEWS_API_KEY=your-news-api-key

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Environment
ENVIRONMENT=development

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO

# Email Configuration
# For development, you can use Gmail SMTP or any other email provider
# Gmail SMTP settings (requires app password for Gmail accounts with 2FA)
EMAIL_BACKEND=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Alternative: SendGrid configuration
# EMAIL_BACKEND=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key